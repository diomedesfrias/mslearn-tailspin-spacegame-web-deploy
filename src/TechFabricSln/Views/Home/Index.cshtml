@model TailSpin.SpaceGame.Web.Models.LeaderboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="login">
    <div class="image-cap"></div>
    <div class="container">
        <a href="" id="login-btn" class="btn btn-default btn-lg" data-toggle="modal" data-target="#login-modal">Iniciar Sesion</a>
    </div>
</section>

<div id="logInfoContainer" class="container">
    <p style="font-weight:400">User:</p>
    <p id="userNameLabel" style="color:blue"></p>
</div>

<div class="container">
    <img class="title" src="/images/1649787042040.jfif" style="width:100%; height:300px">
</div>


<section class="download">
    <div class="image-cap"></div>
    <div class="container">
        <a href="" id="download-btn" class="btn btn-default btn-lg" data-toggle="modal" data-target="#pretend-modal">Descargar Catalogo de Salud</a>
    </div>
</section>

<!-- Screenshots -->
<section class="screens">
    <div class="container">
        <ul>
            <li><a href="" id="screen-01" data-toggle="modal" data-target=".pic-01"><img src="/images/space-game-placeholder.svg" alt=""></a></li>
            <li><a href="" id="screen-02" data-toggle="modal" data-target=".pic-01"><img src="/images/space-game-placeholder.svg" alt=""></a></li>
            <li><a href="" id="screen-03" data-toggle="modal" data-target=".pic-01"><img src="/images/space-game-placeholder.svg" alt=""></a></li>
            <li><a href="" id="screen-04" data-toggle="modal" data-target=".pic-01"><img src="/images/space-game-placeholder.svg" alt=""></a></li>
        </ul>
    </div>
</section>

<!-- Leaderboard -->
<section class="leaderboard">
    <div class="container">
        <a name="leaderboard"></a>
        <h2>Proveedores Medicos</h2>
        <!-- Start Leaderboard table -->
        <div class="row">
            <div class="col-sm-9 leader-scores">
                <div class="row high-score hidden-xs">

                    <div class="col-sm-4">
                        Paciente
                    </div>

                    <div class="col-sm-4">
                        Monto Cobertura Disponible
                    </div>

                    <div class="col-sm-4">
                        Opcion
                    </div>
                </div>

                @{
                    if (Model.Scores.Count() == 0)
                    {
                        <div class="row" style="margin-left: 5px; margin-top: 20px;">No scores match your selection.</div>
                    }

                    int rank = ((Model.Page - 1) * Model.PageSize) + 1;
                    foreach (var score in Model.Scores)
                    {
                        <div class="row high-score align-items-center">
                            <div class="col-sm-1 score-data" style="visibility:hidden">
                                @(rank++).
                            </div>
                            <div class="col-sm-4 score-data">
                                <div style="text-align: left; margin-left: 100px;">
                                    <partial name="Profile" model="new ProfileViewModel { Profile = score.Profile, Rank = (rank - 1).ToString() }" />
                                    <a href="" data-toggle="modal" data-target="#profile-modal-@((rank - 1).ToString())">
                                        <img class="avatar" src="@score.Profile.AvatarUrl" alt="@score.Profile.UserName">
                                        <div class="score-data username" id="profile-@((rank - 1).ToString())">
                                            @score.Profile.UserName
                                        </div>
                                    </a>
                                </div>
                            </div>

                             <div class="col-sm-4 score-data">
                                <p id="montoId-@score.Profile.Id">@score.Profile.MontoDisponible</p>
                            </div>

                            <div class="col-sm-4 score-data">
                                <div style="text-align: left; margin-left: 100px;">
                                    <partial name="Profile" model="new ProfileViewModel { Profile = score.Profile, Rank = (rank - 1).ToString() }" />
                                    <a href="" data-toggle="modal" data-target="#profile-modal-@((rank - 1).ToString())">
                                         <p class="score-data username">
                                            Descuento
                                        </p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                <nav aria-label="...">
                    <ul class="pagination">
                        @if (string.IsNullOrEmpty(Model.PrevLink))
                        {
                            <li class="disabled"><span aria-hidden="true">&laquo;</span></li>
                        }
                        else
                        {
                            <li class=""><a href="@Model.PrevLink" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                        }
                        @{
                            var totalPages = Model.TotalResults / Model.PageSize;
                            if (Model.TotalResults % Model.PageSize != 0)
                            {
                                totalPages++;
                            }

                            for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="@(i == Model.Page ? "active" : null)">
                                    <a href="@($"/?page={i}&pageSize={@Model.PageSize}&mode={@Model.SelectedMode}&region={@Model.SelectedRegion}")#leaderboard">
                                        @i
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                            }
                        }
                        @if (string.IsNullOrEmpty(Model.NextLink))
                        {
                            <li class="disabled"><span aria-hidden="true">&raquo;</span></li>
                        }
                        else
                        {
                            <li class=""><a href="@Model.NextLink" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <!-- End Leaderboard -->

</section>


<!-- Log In modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header no-border">
